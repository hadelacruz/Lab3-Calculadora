<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="358dp"
        android:layout_height="393dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.622"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnApertura"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/material_dynamic_primary30"
                android:onClick="calcular"
                android:text="("
                android:textSize="34sp"
                app:iconSize="18dp" />

            <Button
                android:id="@+id/btnCierre"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/material_dynamic_primary30"
                android:onClick="calcular"
                android:text=")"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btnPorencia"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/material_dynamic_primary30"
                android:onClick="calcular"
                android:text="^"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btnDividir"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/material_dynamic_primary30"
                android:onClick="calcular"
                android:text="/"
                android:textSize="34sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/material_dynamic_primary40"
                android:onClick="calcular"
                android:text="7"
                android:textColorLink="@color/white"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/material_dynamic_primary40"
                android:onClick="calcular"
                android:text="8"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/material_dynamic_primary40"
                android:onClick="calcular"
                android:text="9"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btnMultiplicar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/material_dynamic_primary30"
                android:onClick="calcular"
                android:text="x"
                android:textSize="34sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/material_dynamic_primary40"
                android:onClick="calcular"
                android:text="4"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/material_dynamic_primary40"
                android:onClick="calcular"
                android:text="5"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/material_dynamic_primary40"
                android:onClick="calcular"
                android:text="6"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btnRestar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/material_dynamic_primary30"
                android:onClick="calcular"
                android:text="-"
                android:textSize="34sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/material_dynamic_primary40"
                android:onClick="calcular"
                android:text="1"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/material_dynamic_primary40"
                android:onClick="calcular"
                android:text="2"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/material_dynamic_primary40"
                android:onClick="calcular"
                android:text="3"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btnSumar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/material_dynamic_primary30"
                android:onClick="calcular"
                android:text="+"
                android:textSize="34sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/material_dynamic_primary40"
                android:onClick="calcular"
                android:text="0"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btnC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/material_dynamic_primary30"
                android:text="C"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btnIgual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/material_dynamic_primary30"
                android:onClick="evaluarExpresion"
                android:text="="
                android:textSize="34sp" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="352dp"
        android:layout_height="73dp"
        android:layout_marginTop="92dp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>